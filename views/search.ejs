<!--
including header content which is common for all pages
-->
<%- include layouts/header.ejs %>

<% if (messages.error) { %>
<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/search" method="post" name="form1">
    <table width="25%" border="0">
        <tr>
            <td>Name</td>
            <td><input type="text" name="movie_name" id="movie_name" value="<%= movie_name %>" /></td>
        </tr>
        <tr>
            <td>Time</td>
            <td>
                <select style="width: 170px;" name="movie_time" id="movie_time">
                    <% for(var i = 0; i < 24;i++){ %>
                    <option value="<%=i%>:00"><%=i%>:00</option>
                    <option value="<%=i%>:30"><%=i%>:30</option>
                    <% } %>
                </select>
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="Submit" value="Search" /></td>
        </tr>
    </table>
</form>

<% if (data.length > 0) { %>
<table border=1>
    <tr>
        <th>Movie Name</th>
        <th>Time</th>
    </tr>

    <% data.forEach(function(task){ %>
    <tr>
        <td style="width: 200px;"><%= task.name %></td>
        <td style="width: 200px;"><%= task.time %></td>
    </tr>
    <% }) %>
</table>
<% } %>
<!--
including footer content which is common for all pages
-->
<%- include layouts/footer.ejs %>